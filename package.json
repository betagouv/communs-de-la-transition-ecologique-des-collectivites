{
  "name": "les-communs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter api build && pnpm --filter widget-sandbox build",
    "start": "pnpm --filter api start",
    "build:api": "pnpm --filter api build",
    "build:widget": "pnpm --filter widget build",
    "build:widget-sandbox": "pnpm --filter widget-sandbox build",
    "format": "pnpm -r format",
    "dev": "pnpm -r dev",
    "dev:api": "pnpm --filter api dev",
    "dev:widget": "pnpm --filter widget dev",
    "dev:widget:publish": "cd widget && pnpm build && yalc publish",
    "dev:widget:push": "cd widget && pnpm build && yalc push",
    "dev:widget-sandbox": "pnpm --filter widget-sandbox dev",
    "dev:widget-sandbox:link": "cd widget-sandbox && yalc add @betagouv/les-communs-widget && pnpm install",
    "dev:widget-sandbox:unlink": "cd widget-sandbox && yalc remove @betagouv/les-communs-widget && pnpm install",
    "dev:widget:unlink": "cd widget && yalc remove @betagouv/les-communs-widget && pnpm install",
    "lint": "pnpm -r lint",
    "lint:api": "pnpm --filter api lint",
    "lint:widget": "pnpm --filter widget lint",
    "lint:widget-sandbox": "pnpm --filter widget-sandbox lint",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter api test",
    "test:widget": "pnpm --filter widget test",
    "validate": "pnpm -r validate",
    "prepare": "husky"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.6.2",
    "globals": "^15.11.0",
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.3",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "husky": "^9.1.6",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.5.0"
  },
  "engines": {
    "pnpm": "10.0.0",
    "node": "22.x"
  }

}