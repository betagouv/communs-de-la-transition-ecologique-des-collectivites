{
  "name": "@les-communs/api",
  "version": "0.0.6",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "dev": "nest start --watch",
    "start": "node dist/src/main.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/srcmain",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check",
    "test": "jest --config test/jest.config.ts --runInBand",
    "test:watch": "jest --config test/jest.config.ts --watch --runInBand",
    "test:cov": "jest --config test/jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config test/jest.config.ts",
    "test:e2e": "pnpm generate-types && jest --config test/jest-e2e.config.ts",
    "generate-types": "bash scripts/generate-types.sh",
    "release": "commit-and-tag-version",
    "db:start": "docker-compose up -d",
    "db:clean": "docker-compose down -v",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push:pg",
    "db:migrate:drizzle": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.0.2",
    "@nestjs/throttler": "^6.2.1",
    "express": "^4.21.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-kit": "^0.28.0",
    "drizzle-orm": "^0.36.4",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.0",
    "commit-and-tag-version": "^12.5.0",
    "docker-compose": "^1.1.0",
    "jest": "^29.5.0",
    "openapi-fetch": "^0.13.3",
    "openapi-typescript": "^7.4.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "pnpm": "^9.x",
    "node": "20.x"
  }
}
